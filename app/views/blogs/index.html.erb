<h1>blogs</h1>

<ul>
  <% @blogs.each do |blog| %>
    <li>
      <a href="/blogs/<%= blog.id %>">
        <%= blog.title %>
      </a>
    </li>
  <% end %>
</ul>
<body mode="maker">
  <div class="blockly-editor">
    <button class="mode-maker mdl-button" id="edit">Edit</button>
    <button class="mode-edit mdl-button mdl-js-button" id="done">Done</button>
    <button class="mode-blockly mdl-button mdl-js-button" id="save">Save</button>

    <div id="blocklyDiv" style="height: 500px; width: 500px;"></div>
  </div>

  <script src="https://unpkg.com/blockly"></script>
  <!-- <script src="https://unpkg.com/blockly/javascript_compressed"></script> -->

  <%= javascript_include_tag "generators/ruby_generator" %>
  <%= javascript_include_tag "ruby_toolbox" %>
</body>
