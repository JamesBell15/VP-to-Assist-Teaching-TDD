<%= stylesheet_link_tag "style" %>
<%= javascript_include_tag "banner_alert" %>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>


<h1>blogs</h1>

<ul>
  <% @blogs.each do |blog| %>
    <li>
      <a href="/blogs/<%= blog.id %>">
        <%= blog.title %>
      </a>
    </li>
  <% end %>
</ul>
<p>
  To use:<br/>
  write the path to file relative to 'app/' without the .rb<br/>
</p>

<body mode="maker">
  <div class="blockly-editor">
    <button class="mode-maker mdl-button" hidden id="edit">Edit</button>



    <form action="/blocks" method="post" data-remote="true">
      <input id="block" name="block" value="nil" type="hidden"/>
      <button class="mode-edit mdl-button mdl-js-button" id="done" type="submit">Done</button>
    </form>

    <button class="mode-blockly mdl-button mdl-js-button" hidden id="save">Save</button>

    <div id="blocklyDiv" style="height: 800px; width:1000px;"></div>


  </div>

  <script src="https://unpkg.com/blockly"></script>

  <%= javascript_include_tag "blocks/ruby" %>
  <%= javascript_include_tag "generators/ruby_generator" %>
  <%= javascript_include_tag "ruby_toolbox" %>
</body>
